<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 알림 설정 카테고리 -->
    <PreferenceCategory
        app:key="notification"
        app:title="알림 설정">

        <!-- 메시지 알림 On/Off 스위치 -->
        <SwitchPreferenceCompat
            app:key="noti_message"
            app:title="메시지 알림"/>

        <!-- 소리 알림 On/Off 스위치 -->
        <SwitchPreferenceCompat
            app:key="noti_sound"
            app:title="소리 알림"/>
    </PreferenceCategory>

    <!-- 기타 설정 카테고리 -->
    <PreferenceCategory
        app:key="etc"
        app:title="기타 설정">

        <!-- ID 입력을 위한 텍스트 입력 설정 -->
        <EditTextPreference
            app:key="id"
            app:title="ID 설정"/>

        <!-- 색상 선택을 위한 리스트 설정 -->
        <ListPreference
            android:entries="@array/my_color"
            android:entryValues="@array/my_color_values"
            app:key="color"
            app:title="색상선택"/>
    </PreferenceCategory>
</PreferenceScreen>